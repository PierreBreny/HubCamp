<% layout('layouts/boilerplate') %>
    <form action="/campgrounds/<%=campground._id%>?_method=PUT" method="POST">
    <div>
        <label for="title">Title</label>
        <input id="title" type="text" name="campground[title]" value="<%=campground.title%>">
    </div>
    <div>
        <label for="location">Location</label>
        <input type="text" id="location" name="campground[location]" value="<%=campground.location%>">
    </div>
    <button>Save Campground</button>
    </form>
    <a href="/campgrounds/<%=campground._id%> ">Cancel</a>